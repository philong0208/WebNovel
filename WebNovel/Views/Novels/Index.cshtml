@model IEnumerable<Novel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NovelTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NovelDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NovelDatePost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NovelView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NovelTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NovelDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NovelDatePost)
            </td>
            <td>
                    @foreach (var genre in item.Genres)
                    {
                            <label>@genre.GenreName</label>
                        if (item.Genres.Count > 1)
                        {
                                    <label>, </label>
                        }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NovelView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NovelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NovelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NovelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
