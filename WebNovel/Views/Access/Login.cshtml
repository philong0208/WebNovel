@model WebNovel.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebNovel.styles.css" asp-append-version="true" />
    <title>Đăng nhập</title>
</head>
<body>
    <div>
        <form class="w-25" asp-controller="Access" asp-action="Login" method="post">
            <h1>ĐĂNG NHẬP</h1>
            <hr />
            <fieldset>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="userID">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else. Liar</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="password">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" asp-for="keepLoggedIn">
                    <label class="form-check-label" for="flexCheckDefault">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                @if (ViewData["ValidateMessage"] != null)
                {
                    <br />
                    <label class="alert-danger">@ViewData["ValidateMessage"]</label>
                }
            </fieldset>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
