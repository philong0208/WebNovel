@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách tác giả</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.AuthorId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
